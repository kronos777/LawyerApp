<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".presentation.fragments.AboutAppFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_profile_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/card_profile_background"
        app:strokeColor="@color/color_primary"
        app:strokeWidth="1dp"
        app:cardCornerRadius="4dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:stateListAnimator="@null">

            <TextView
                android:id="@+id/about_application_h1"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:lineHeight="24dp"
                android:text="Вход в систему"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="@color/color_primary"
                android:src="@drawable/ic_baseline_chevron_right_24" />


            <TextView
                android:id="@+id/et_email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:lineHeight="16dp"
                android:text="Вход с подтверждением по смс"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/color_gray"
                android:textFontWeight="400"
                android:textSize="12sp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_profile_actions_in_the_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_profile_login"
        app:cardBackgroundColor="@color/card_profile_background"
        app:strokeColor="@color/color_primary"
        app:strokeWidth="1dp"
        app:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:stateListAnimator="@null">

            <TextView
                android:id="@+id/h1_actions_in_the_system"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:lineHeight="24dp"
                android:text="Действия в системе"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="@color/color_primary"
                android:src="@drawable/ic_baseline_chevron_right_24" />


            <TextView
                android:id="@+id/et_value_actions_in_the_system"
                android:layout_width="239dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="left"
                android:lineHeight="16dp"
                android:text="Список устройств, с которыми входили в приложение"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/color_gray"
                android:textFontWeight="400"
                android:textSize="12sp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>