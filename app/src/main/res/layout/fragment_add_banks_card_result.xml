<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".presentation.fragments.IntroductoryFragment">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="24dp"
        android:lineHeight="32dp"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="400"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Оплата при добавлении карты" />
    <TextView
        android:id="@+id/textError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14dp"
        android:lineHeight="20dp"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="500"
        android:layout_marginTop="22dp"
        android:textColor="@color/color_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        android:text="Ваш платёж отклонен" />
    <TextView
        android:id="@+id/textTitleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14dp"
        android:lineHeight="20dp"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="400"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textError"
        android:text="Платёж был отклонен по одной из следующих причин:" />
    <TextView
        android:id="@+id/textList1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12dp"
        android:lineHeight="16dp"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="400"
        android:layout_marginTop="16dp"
        android:textColor="@color/color_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitleList"
        android:text="введены неверные данные банковской карты" />
    <TextView
        android:id="@+id/textList2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12dp"
        android:lineHeight="16dp"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="400"
        android:layout_marginTop="14dp"
        android:textColor="@color/color_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textList1"
        android:text="введён неверный код для подтверждения операции" />

    <TextView
        android:id="@+id/textList3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12dp"
        android:lineHeight="16dp"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="400"
        android:layout_marginTop="14dp"
        android:textColor="@color/color_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textList2"
        android:text="введён неверный код для подтверждения операции" />

    <TextView
        android:id="@+id/textList4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="12dp"
        android:lineHeight="16dp"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="400"
        android:layout_marginTop="14dp"
        android:textColor="@color/color_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textList3"
        android:text="ваш банк недоступен для проведения операций или отклонил проведение операции" />
    <TextView
        android:id="@+id/textRepeatOperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14dp"
        android:lineHeight="20dp"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="400"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textList4"
        android:text="Пожалуйста, повторите операцию." />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/enter_button"
        android:layout_marginBottom="50dp"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:textStyle="normal"
        android:text="Ввести карту заново"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>